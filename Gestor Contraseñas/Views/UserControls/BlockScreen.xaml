<UserControl x:Class="Gestor_Contraseñas.Views.UserControls.BlockScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gestor_Contraseñas.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="/Images/lock.png" Height="100" Width="100"/>
        <TextBlock Foreground="WhiteSmoke" Text="The application has been blocked due to inactivity" TextAlignment="Center"/>
        <TextBlock Foreground="WhiteSmoke" Text="Press any button or move the cursor to unblock the application" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
